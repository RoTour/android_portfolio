<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="itemBackground">@android:color/white</item>
        <item name="actionMenuTextAppearance">@android:color/white</item>
    </style>

    <style name="todo_task">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="todo_due_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Button">
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryDarkColor</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>
